<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_gravity="center"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Esperando confirmacion del cliente..."/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ProgressBar
                android:id="@+id/pending_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:max="1800000"
                android:progress="1799000"
                android:secondaryProgress="0"
                android:progressDrawable="@drawable/timer"/>
            <TextView
                android:id="@+id/pending_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30:00"
                android:textColor="@color/grey"
                android:textSize="16pt"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pedido_viaje"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="9pt"
                    android:textColor="@color/black"
                    android:text="Cuenca - Guayaquil"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/pedido_producto"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/grey"
                    android:textSize="7pt"
                    android:text="Ceramica"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/pedido_peso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:textColor="@color/grey"
                        android:text="Peso: 3 a 5 Tl."/>
                    <TextView
                        android:id="@+id/pedido_carga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:textColor="@color/grey"
                        android:text="Carga: Hoy a las 5:00pm"/>
                    <TextView
                        android:id="@+id/pedido_entrega"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:textColor="@color/grey"
                        android:text="Entrega: Maniana a las 6:00am"/>
                    <TextView
                        android:id="@+id/pedido_extra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:textColor="@color/grey"
                        android:text="Cubicaje: 20 m3"/>
                    <TextView
                        android:id="@+id/pedido_refrigeracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:textColor="@color/grey"
                        android:text="Refrigerado: Si"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pedido_valor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="10pt"
                        android:textColor="@color/orange"
                        android:text="$350.00"
                        android:gravity="bottom|right"/>
                    <TextView
                        android:id="@+id/pedido_comision"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="7pt"
                        android:textColor="@color/orange"
                        android:text="$12.50"
                        android:gravity="bottom|right"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="5pt"
                        android:textColor="@color/grey"
                        android:text="Comision"
                        android:gravity="top|right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pending_separator"
            android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/pedido_pendiente_cancelar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/grey"
            android:gravity="center|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:text="CANCELAR"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>